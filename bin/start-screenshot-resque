#!/usr/local/bin/ruby

app_name = 'vurl'
app_name += '-staging' if ENV['RAILS_ENV'] = 'staging'
rails_env = ENV['RAILS_ENV'] == 'staging' ? 'staging' : 'production'
File.open("/var/tmp/screenshot-resque-#{rails_env}.pid", "w") do |f|
  f << Process.pid.to_s
end
`cd /var/www/apps/#{app_name}/current && RAILS_ENV=#{ENV['RAILS_ENV']} VERBOSE=1 QUEUE=take_screenshot rake environment resque:work`
