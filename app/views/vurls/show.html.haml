#vurls_show_container{:class => 'span-16 last'}
  %div{:class => "span-3 field_name"}
    Original URL:
  %div{:class => "span-13 last field_value"}
    = h @vurl.url
  %div{:class => "span-3 field_name"}
    Vurlified URL:
  %div{:class => "span-13 last field_value"}
    = link_to redirect_url(@vurl.slug), redirect_url(@vurl.slug)
  %div{:class => "span-3 field_name"}
    Preview link:
  %div{:class => "span-13 last field_value"}
    = link_to preview_url(@vurl.slug), preview_url(@vurl.slug)

= render :partial => 'footer_menu'
